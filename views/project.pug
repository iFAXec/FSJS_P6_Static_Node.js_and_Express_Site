extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        
        h1 #{projectData.project_name}
        
        p #{projectData.description}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in projectData.technologies
            
            li #{technology}             
        
        a.btn-link(href=`${projectData.live_link}`, target="_blank") Live Demo
        a.btn-link(href=`${projectData.github_link}`, target="_blank") GitHub Repo

    .project-img-box.box     
        
        img.project-img(src=`${projectData.image_urls[0]}`, alt=`Thumbnail ${projectData.project_name}`)
        img.project-img(src=`${projectData.image_urls[1]}`, alt=`Thumbnail ${projectData.project_name}`)
        
        
    nav.nav
      a(href='/')
        span &larr;
        |  Back
